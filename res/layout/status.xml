<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:id="@+id/alcoholTotalText" android:layout_gravity="center_horizontal" android:singleLine="false"
            android:height="140dp" android:textSize="90dp" android:layout_weight="0.23"
            android:textColor="@color/green"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/partyStatusText" android:layout_gravity="center_horizontal" android:singleLine="false"
            android:height="140dp"  android:layout_weight="0.23"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add drink"
            android:id="@+id/openAddDrinkButton" android:layout_gravity="center_horizontal"
            android:layout_weight="0.03"/>
</LinearLayout>